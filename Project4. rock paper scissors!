import random

rock = '''
    _______
---'   ____)
      (_____)
      (_____)
      (____)
---.__(___)
'''

paper = '''
    _______
---'   ____)____
          ______)
          _______)
         _______)
---.__________)
'''

scissors = '''
    _______
---'   ____)____
          ______)
       __________)
      (____)
---.__(___)
'''

#Write your code below this line ðŸ‘‡
user_choice = input("What do you choose? Rock, Paper, or Scissors?")

game_list = [rock, paper, scissors]
user_list = []
com_list = []

#store user's input into the user_list
lower_choice = user_choice.lower()
if lower_choice == "rock":
  user_list.append(0)
  print(game_list[0]) 
elif lower_choice == "paper":
  user_list.append(1)
  print(game_list[1])
elif lower_choice == "scissors":
  user_list.append(2)
  print(game_list[2])
else:
  print("Don't exist. Game Over.")

#generate a random choice for the computer
com_choice = random.randint(0, 2)
if com_choice == 0:
  com_list.append(0)
elif com_choice == 1:
  com_list.append(1)
else:
  com_list.append(2)

print("Computer chose:")
print(game_list[com_choice])

#compare the user's and the computer's choice 
if user_list[0] == com_list[0]:
  print("Draw")
elif user_list[0] == 0:
  if com_list[0] == 1:
    print("You lose. Computer Wins!")
  else:
    print("You Win!")
elif user_list[0] == 1:
  if com_list[0] == 0:
    print("You Win!")
  else:
    print("You lose. Computer Wins!")
else:
  if com_list[0] == 0:
    print("You lose. Computer Wins!")
  else:
    print("You Win!")
